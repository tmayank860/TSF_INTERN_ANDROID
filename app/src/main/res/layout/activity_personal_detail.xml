<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/btnbg"
    android:layout_height="match_parent"
    tools:context=".PersonalDetailActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Personal Details"
        android:textColorHint="@color/Whitebright"
        android:textColor="@color/Whitebright"
        android:textSize="22sp"
        app:fontFamily="@font/roboto_medium"
        app:layout_constraintBottom_toTopOf="@+id/user_name_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/user_name_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColorHint="@color/Whitebright"
        android:textColor="@color/Whitebright"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        app:fontFamily="@font/roboto_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/user_mobile_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/Whitebright"
        android:textColor="@color/Whitebright"
        android:ems="10"
        android:hint="Mobile"
        android:inputType="textPersonName"
        app:fontFamily="@font/roboto_medium"
        app:layout_constraintBottom_toTopOf="@+id/user_location_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_name_edit_text" />

    <EditText
        android:id="@+id/user_location_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/Whitebright"
        android:textColor="@color/Whitebright"
        android:ems="10"
        android:hint="Location"
        android:inputType="textPersonName"
        app:fontFamily="@font/roboto_medium"
        app:layout_constraintBottom_toTopOf="@+id/user_links_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_mobile_edit_text" />

    <EditText
        android:id="@+id/user_links_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Links"
        android:textColorHint="@color/Whitebright"
        android:textColor="@color/Whitebright"
        android:inputType="textPersonName"
        app:fontFamily="@font/roboto_medium"
        app:layout_constraintBottom_toTopOf="@+id/save_personal_details_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_location_edit_text" />

    <Button
        android:id="@+id/save_personal_details_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="40dp"
        android:background="@drawable/bkgrnd"
        android:text="Save"
        android:textColor="@android:color/white"
        app:fontFamily="@font/roboto_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_links_edit_text" />
</android.support.constraint.ConstraintLayout>

